#------------------------------------------------------------------------------
# provider
#------------------------------------------------------------------------------
provider "aws" {
  region = var.region
}

#------------------------------------------------------------------------------
# terraform
#------------------------------------------------------------------------------
terraform {
  required_version = ">= 0.12"
  required_providers {
    aws = ">= 2.24.0"
  }
}

#------------------------------------------------------------------------------
# data
#------------------------------------------------------------------------------
# get amazon credentials
data "aws_caller_identity" "current" {}
